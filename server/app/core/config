import os
from typing import Set
from pydantic_settings import BaseSettings

class Settings(BaseSettings):
    """Application settings.
    
    Attributes:
        API_V1_STR: API version string.
        UPLOAD_FOLDER: Directory where files will be stored.
        MAX_CONTENT_LENGTH: Maximum file size in bytes.
        ALLOWED_EXTENSIONS: Set of allowed file extensions.
    """
    API_V1_STR: str = "/api/v1"
    UPLOAD_FOLDER: str = os.environ.get("UPLOAD_FOLDER", "uploads")
    MAX_CONTENT_LENGTH: int = int(os.environ.get("MAX_CONTENT_LENGTH", 8 * 1024 * 1024 * 1024))  # 8GB
    ALLOWED_EXTENSIONS: Set[str] = {"txt", "pdf", "png", "jpg", "jpeg", "gif", "csv", "xlsx", "docx", "zip"}
    
    class Config:
        env_file = ".env"
        case_sensitive = True

settings = Settings()